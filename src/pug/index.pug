                each color in ["white", "yellow", "blue", "red", "carmine", "green", "lightblue", "freshgreen", "orange", "pink", "purple", "black"]
                  .guild-1EfMGQ
                    div(draggable="true")
                      .guildInner-3DSoA4.da-guildInner(style="border-radius: 25px;" draggable="false")
                        a
                          .icon-3o6xvg.guildIcon-CT-ZDq.iconSizeLarge-161qtT.da-icon.da-iconSizeLarge.noIcon-1a_FrS.da-noIcon(draggable="false" style=`background: ${colorCodes[color] ? colorCodes[color] : color}`) #{color}
                .guild-1EfMGQ.unread-qLkInr
                    div(draggable="true")
                      .guildInner-3DSoA4.da-guildInner(style="border-radius: 25px;" draggable="false")
                        a
                          .icon-3o6xvg.guildIcon-CT-ZDq.iconSizeLarge-161qtT.da-icon.da-iconSizeLarge.noIcon-1a_FrS.da-noIcon(draggable="false" style=`background: ${color}`) Unread
