            .scroll-wrap.scrollWrap-1IAIlv.da-scrollWrap
              .guilds-1q_RqH.scroller.da-guilds.da-scroller
                .guild-1EfMGQ
                  .guildInner-3DSoA4.da-guildInner(style="border-radius: 25px;" draggable="false")
                    a(href="https://twitter.com/ssasasssaassasa/status/932201664009736192" target="_blank")
                      .icon-3o6xvg.guildIcon-CT-ZDq.iconSizeLarge-161qtT.da-icon.da-iconSizeLarge(draggable="false" style='background: url("PaPA.png") center/contain')
                .guild-1EfMGQ#bd-pub-li(style="height: 20px;")
                  .guildInner-3DSoA4.da-guildInner(style="border-radius: 4px; height: 20px;")
                    a
                      #bd-pub-button(style="line-height: 20px; font-size: 12px;") public
